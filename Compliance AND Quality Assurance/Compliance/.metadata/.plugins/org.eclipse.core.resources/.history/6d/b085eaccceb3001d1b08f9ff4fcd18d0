import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class TesteMensagemBoasVindas extends MensagemBoasVindas {
	
	
	public TesteMensagemBoasVindas(String nome) {
		super(nome);
		// TODO Auto-generated constructor stub
	}

	@Test
	void testeMensagemPadrao() {
		TesteMensagemBoasVindas("Luan Reis");
		assertEquals(mensagemPadrao(), "Seja bem vindo รก sua calculadora digital");
	}
	
	@Test
	void testeMensagemPadraoComNome() {
		mensagens = new MensagemBoasVindas("Luan Reis");
		assertEquals(mensagens.mensagemPadraoComNome(), "Luan Reis" + "!\n" + "Confira os resultados dos testes no painel da JUNIT!");
	}

}
