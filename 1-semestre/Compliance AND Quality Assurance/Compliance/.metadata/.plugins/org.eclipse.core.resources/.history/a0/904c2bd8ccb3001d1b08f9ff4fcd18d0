
public class MensagemBoasVindas {
	
	private String mensagem;
	
	

	public MensagemBoasVindas(String mensagem) {
		this.mensagem = mensagem;
	}

	public String getMensagem() {
		return mensagem;
	}

	public void setMensagem(String mensagem) {
		this.mensagem = mensagem;
	}
	
	
	
	public String mensagemPadrao() {
		String ms = "Seja bem vindo รก sua calculadora digital";
		System.out.println(ms);
		return ms;
	}
	
	public String mensagemPadrao(String name) {
		String ms = name + "!\n" + "Confira os resultados dos testes no painel da JUNIT!";
		return ms;
	}
	
	

}
